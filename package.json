{
  "name": "demonicka-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Démonická monorepo",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "turbo run build",
    "build:server": "turbo run build --filter=demonicka-server",
    "build:web": "turbo run build --filter=demonicka-web",
    "build:shared": "turbo run build --filter='@demonicka/*'",
    "start": "turbo run start",
    "start:server": "turbo run start --filter=demonicka-server",
    "start:web": "turbo run start --filter=demonicka-web",
    "dev": "turbo run dev",
    "dev:server": "turbo run dev --filter=demonicka-server",
    "dev:web": "turbo run dev --filter=demonicka-web",
    "preview:web": "turbo run preview --filter=demonicka-web",
    "test": "turbo run test",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^2.7.4",
    "typescript": "^5.7.3"
  }
}
